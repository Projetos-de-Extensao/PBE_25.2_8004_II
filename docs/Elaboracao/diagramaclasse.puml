class Aluno {
    +nome: string
    +matricula: string
    +email: string
    +telefone: string
    +CRGeral: float
    +CRDisciplina: float
    +curso: string
    +senha: string
    +cadastrar(): void
    +editarPerfil(): void
}

class Professor {
    +nome: string
    +matricula: string
    +email: string
    +telefone: string
    +senha: string
}

class Direcao {
    +nome: string
    +email: string
    +senha: string
    +visualizarDashboard(): void
}

class Vaga {
    +nome: string
    +identificador: int
    +preRequisitos: string
    +disciplina: string
    +status: string
    +prazoInscricao: date
}

class Candidatura {
    +id: int
    +aluno: Aluno
    +vaga: Vaga
    +documentos: string
    +status: string
    +dataCandidatura: date
    +validarCR(): bool
}

class RegistroMonitoria {
    +id: int
    +aluno: Aluno
    +vaga: Vaga
    +horasTrabalhadas: float
    +dataRegistro: date
    +validadoPor: Professor
}

class Disciplina {
    +nome: string
    +codigo: string
    +professor: Professor
    +cargaHoraria: int
    +ementa: string
}

